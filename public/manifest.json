{
  "manifest_version": 3,

  "name": "Quest Autorefresh",
  "description": "Quest Autorefresh",
  "version": "1.0",

  "action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["https://quest.pecs.uwaterloo.ca/psc/SS/ACADEMIC/SA/c/NUI_FRAMEWORK.PT_AGSTARTPAGE_NUI.GBL*"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
